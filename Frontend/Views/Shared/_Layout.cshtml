<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Frontend</title>
    <link href="https://cdn.jsdelivr.net/npm/daisyui@4.12.13/dist/full.min.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <main class="h-screen overflow-y-auto flex flex-col bg-base-200">
        <header class="navbar bg-base-100">
            <nav>
                <a class="btn btn-ghost text-xl" asp-area="" asp-controller="Home" asp-action="Index">Frontend</a>
            </nav>
        </header>

        <div class="flex-grow container mx-auto py-8">
            @RenderBody()
        </div>

        <footer class="border-t bg-base-100 py-4">
            <div class="container mx-auto text-center">
                &copy; 2024 - Frontend - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    </main>
    <script src="https://cdn.tailwindcss.com"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
